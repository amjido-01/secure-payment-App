<!DOCTYPE html>
<html lang="en">

<body class="bg-secondary-white">
    <!-- component -->
    <div class="bg-grey-lighter min-h-screen border border-red-600 flex flex-col">
        <!-- <a href="login">login</a> -->
        <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
         
            <div class="bg-white border rounded-md px-6 py-6 shadow-md text-black w-full">
                <!-- <h1 class="text-3xl font-semibold text-center text-secondary-blue">Log In</h1> -->
                <h1 class="mb-8 text-3xl font-semibold text-secondary-blue text-center">Sign up</h1>
                <form action="/users/register" method="POST">
                    <%- include ('./partial/message') %>
                    <div>
                        <label for="full-name" class="block text-sm text-gray-800 dark:text-gray-200 cursor-pointer">Full Name</label>
                        <input 
                            type="text"
                            id="full-name"
                            class="block w-full px-4 py-2 mt-2 mb-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                            name="fullname"
                            value="<%= typeof name != 'undefined' ? name: '' %>"
                        />
                    </div>

                    <div>
                        <label for="email" class="block text-sm text-gray-800 dark:text-gray-200 cursor-pointer">Email</label> 
                        <input 
                            type="text"
                            id="email"
                            class="block w-full px-4 py-2 mt-2 mb-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                            name="email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                    </div>

                    <div>
                        <label for="password" class="block text-sm text-gray-800 dark:text-gray-200 cursor-pointer">Password</label> 
                        <input 
                            type="password"
                            id="password"
                            class="block w-full px-4 py-2 mt-2 mb-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                            name="password"
                            value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                    </div>

                    <div>
                        <label for="c_password" class="block text-sm text-gray-800 dark:text-gray-200 cursor-pointer">Comfirm Password</label> 
                        <input 
                            type="password"
                            id="c_password"
                            class="block w-full px-4 py-2 mt-2 mb-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                            name="c_password"
                            value="<%= typeof c_password != 'undefined' ? c_password : '' %>"
                        />
                    </div>

                    <div class="mt-5">
                        <button type="submit" class="w-full px-4 py-2 tracking-wide rounded  text-white bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600 transition-colors duration-300 transform  bg-secondary-blue hover:bg-linear-blue focus:ring-2 focus:ring-primary-blue focus:outline-none ">
                            Create Account
                        </button>
                    </div>

                    <div class="text-center text-sm text-grey-dark mt-4">
                        By signing up, you agree to the 
                        <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">
                            Terms of Service
                        </a> and 
                        <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">
                            Privacy Policy
                        </a>
                    </div>
                

                    <div class="text-grey-dark mt-6">
                        <span class="mt-8 text-xs font-light text-center text-gray-400"> Already have an account?</span>
                        <!-- Already have an account? -->
                        <a class="font-medium text-gray-700 dark:text-gray-200 hover:underline" href="login">
                            Log in
                        </a>.
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
</html>